{{#partial "title" }}
<title>{{title}}</title>
<style>
  .body-bg {
    background-color: #9921e8;
    background-image: linear-gradient(315deg, #9921e8 0%, #5f72be 74%);
  }

</style>
<script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js" integrity="sha512-CNgIRecGo7nphbeZ04Sc13ka07paqdeTu0WR1IM4kNcpmBAUSHSQX0FslNhTDadL4O5SAGapGt4FodqL8My0mA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{{/partial}}

{{#partial "content"}}
<div class="body-bg min-h-screen pt-6 md:pt-10 pb-6 px-2 md:px-0" style="font-family:'Lato',sans-serif;">


  <header class="max-w-lg mx-auto">

    <nav>
      {{>navbar/header.hbs}}
    </nav>

    <a href="#">
      <h1 class="text-4xl font-bold text-white text-center">{{header}}</h1>
    </a>
  </header>

  <section>

    <div class="grid grid-cols-2">
      
        {{#each mascotas}}
          <div class="mt-4">
            {{> card.hbs url = url nickname = nickname name = name type = type}}
          </div>
        {{/each}}
      

    </div>

  </section>

  {{> footer.hbs }}
</div>
{{/partial}}

{{> base.hbs  logged = logged admin = admin}}