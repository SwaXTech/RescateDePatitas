{{#partial "form"}}

<form class="grid grid-cols-2" id="pet_form" method="POST" action="/mascotas">

  <div class="mr-5">

    {{> form_select_field.hbs id="type" name = "type" label = "Clase" error = error listado = clases form = "pet_form"}}
    {{> form_field.hbs id="name" name = "name" label="Nombre" type = "text" error = error }}
    {{> form_field.hbs id="nick" name = "nick" label="Apodo" type = "text" error = error }}

  </div>
  <div>
    {{> form_field.hbs id="age" name = "age" label="Edad" type = "number" error = error }}
    {{> form_select_field.hbs id="gender" name = "gender" label = "Sexo" error = error listado = sexos form =
    "pet_form"}}
    {{> form_select_field.hbs id="size" name = "size" label = "Tamaño" error = error listado = tamaños form =
    "pet_form"}}
  </div>

