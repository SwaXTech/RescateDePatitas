{{#partial "title" }}
<title>{{title}}</title>
<style>
  .body-bg {
    background-color: #9921e8;
    background-image: linear-gradient(315deg, #9921e8 0%, #5f72be 74%);
  }

  input[type=file]::-webkit-file-upload-button {
  color: white;
  background: rgb(124, 58, 237);
  font-weight: 500;
  font-size: 0.875rem;
  cursor: pointer;
  border: 0;
  padding-top: 0.625rem;
  padding-bottom: 0.625rem;
  padding-left: 2rem;
  padding-right: 1rem;
  -webkit-margin-start: -1rem;
  margin-inline-start: -1rem;
  -webkit-margin-end: 1rem;
  margin-inline-end: 1rem;
}
</style>
{{/partial}}

{{#partial "content"}} 
<div class="body-bg min-h-screen pt-12 md:pt-20 pb-6 px-2 md:px-0" style="font-family:'Lato',sans-serif;">

  
  <header class="max-w-lg mx-auto">

    <nav>
      {{>navbar/header.hbs}}
    </nav>

    <a href="#">
      <h1 class="text-4xl font-bold text-white text-center">{{header}}</h1>
    </a>
  </header>

  <main class="bg-white {{#if large}} max-w-5xl {{^}} max-w-lg {{/if}}mx-auto p-8 md:p-12 my-10 rounded-lg shadow-2xl">
    <section>
      <h3 class="font-bold text-2xl">{{title}}</h3>
      {{!-- <p class="text-gray-600 pt-2">Iniciar sesi√≥n</p> --}}
    </section>

    <section class="mt-10">
      {{#block "form"}}
      {{/block}}
    </section>
  </main>

  {{#block "footer"}}
  {{/block}}

  {{> footer.hbs }}
</div>
{{/partial}}

{{> base.hbs}}