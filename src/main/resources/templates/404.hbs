  .body-bg {
    background-color: #9921e8;
    background-image: linear-gradient(315deg, #9921e8 0%, #5f72be 74%);
  }

  .text-9xl {
    font-size: 14rem;
  }

  @media(max-width: 645px) {
    .text-9xl {
      font-size: 5.75rem;
    }

    .text-6xl {
      font-size: 1.75rem;
    }

    .text-2xl {
      font-size: 1rem;
      line-height: 1.2rem;
    }

    .py-8 {
      padding-top: 1rem;
      padding-bottom: 1rem;
    }

    .px-6 {
      padding-left: 1.2rem;
      padding-right: 1.2rem;
    }

    .mr-6 {
      margin-right: 0.5rem;
    }

